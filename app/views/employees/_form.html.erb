<%= form_for @employee do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation" style="background-color: #fcc">
      <h2><%= pluralize(@employee.errors.count, "erro") %> impede(m) salvar este colaborador</h2>
      <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <dl>
    <dt><%= f.label :name %></dt>
    <dd><%= f.text_field :name %></dd>
  
    <dt><%= f.label :birth_date %></dt>
    <dd><%= f.text_field :birth_date %></dd>

    <dt><%= f.label :sex %></dt>
    <dd><%= f.select :sex, [['Masculino', 'M'], ['Feminino', 'F']] %></dd>

    <dt><%= f.label :sector %></dt>
    <dd>
      <%= f.collection_select :sector_id,
                              Sector.order(name: :asc),
                              :id,
                              :name,
                              { include_blank: '- Selecione -' } %>
    </dd>
  </dl>

  <%= f.submit %>
  <%= link_to 'Cancelar', employees_path %>
<% end %>
