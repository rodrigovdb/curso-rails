<%= form_for @employee do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation" style="background-color: #fcc">
      <h2><%= pluralize(@employee.errors.count, "erro") %> impede(m) salvar este colaborador</h2>
      <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= f.label :birth_date %>
    <%= f.text_field :birth_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :sex %>
    <%= f.select :sex, [['Masculino', 'M'], ['Feminino', 'F']], {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :sector %>
    <%= f.collection_select :sector_id,
                            Sector.order(name: :asc),
                            :id,
                            :name,
                            { include_blank: '- Selecione -' },
                            { class: 'form-control' } %>
  </div>

  <%= f.submit 'Salvar', class: 'btn btn-success' %>
  <%= link_to 'Cancelar', employees_path, class: 'btn btn-danger' %>
<% end %>
