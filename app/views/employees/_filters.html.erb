<div class="panel panel-default">
  <div class="panel-heading">Pesquisar</div>
  <div class="panel-body">
    <%= form_tag(employees_path, method: 'get') do %>
    <p>
      <%= label_tag :name, 'Nome' %>
      <%= text_field :filters, :name %>
    </p>

    <p>
      <%= label_tag :sector_id, 'Setor' %>
      <%= collection_select :filters, :sector_id,
                               Sector.order(name: :asc),
                              :id,
                              :name,
                              {
                                  include_blank:  '- Selecione -',
                                 selected:    @search_filters[:sector_id]
                               } %>
    </p>

    <%= submit_tag("Search") %>
    <% end %>
  </div>
</div>
