<h1>Visualizar colaborador</h1>

<dl>
  <dt>Nome</dt>
  <dd><%= @employee.name %></dd>

  <dt>Sexo</dt>
  <dd><%= @employee.sex %></dd>

  <dt>Data do Nascimento</dt>
  <dd><%= ajusta_data(@employee.birth_date) %></dd>

  <dt>Setor</dt>
  <dd><%= @employee.sector.name %></dd>
</dl>

<fieldset>
  <legend>Contatos</legend>

  <%= render 'contacts/list', contacts: @employee.contacts %>

  <%= link_to 'Cadastrar contato', new_employee_contact_path(@employee) %>
</fieldset>

<%= link_to 'Cancelar', employees_path %>
